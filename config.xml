<?xml version='1.0' encoding='utf-8'?>
<widget id="com.waypoolsas.waypooldriver2" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Waypool Cars</name>
    <description>Waypool for students with car</description>
    <author email="waypooltec@gmail.com" href="https://waypooltech.wordpress.com/">Ionic Framework Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <platform name="android">
        <preference name="loadUrlTimeoutValue" value="700000" />
        <resource-file src="google-services.json" />
        <allow-intent href="market:*" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi/icon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi/icon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi/icon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi/icon.png" />
        <splash density="port-ldpi" src="resources/android/splash/splash.png" />
        <splash density="port-mdpi" src="resources/android/splash/splash.png" />
        <splash density="port-hdpi" src="resources/android/splash/splash.png" />
        <splash density="port-xhdpi" src="resources/android/splash/splash.png" />
        <splash density="port-xxhdpi" src="resources/android/splash/splash.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/splash.png" />
    </platform>
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
    </platform>
    <config-file parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
        <string>Usado para conectarte con otros usuarios de Waypool y asi brindarte un mejor servicio</string>
    </config-file>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>Necesitamos acceso a tu camara para que nos puedas enviar tus fotos de documentos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Accedemos a tus imagenes para que sea más fácil para ti mandarnos tu documentos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
        <string>Usado para conectarte con otros usuarios de Waypool y asi brindarte un mejor servicio</string>
    </edit-config>
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^1.2.1" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.1.3" />
    <plugin name="platforms">
        <variable name="undefined" value="undefined" />
        <variable name="undefined" value="undefined" />
    </plugin>
    <plugin name="mx.ferreyra.callnumber" spec="0.0.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-email-composer" spec="^0.9.2">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="call-number" spec="^1.0.1" />
    <plugin name="cordova-plugin-badge" spec="^0.8.8" />
    <plugin name="cordova-sqlite-storage" spec="^3.2.0" />
    <plugin name="cordova-plugin-firebase" spec="^2.0.5" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.2" />
</widget>
